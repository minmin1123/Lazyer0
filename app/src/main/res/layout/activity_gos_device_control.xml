<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fadingEdge="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="20dp"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical" >
        
		
		<!-- led(布尔可写) -->
		 <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="1dp"
				android:background="@color/white"
				android:padding="10dp" >

			 <ImageView
				 android:id="@+id/lightOne"
				 android:layout_marginLeft="10dp"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:background="@drawable/lightoff"
				 />
		 
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_centerVertical="true"
					android:text="灯1"
					android:layout_toRightOf="@id/lightOne"
					android:layout_marginLeft="45dp"
					android:textSize="20sp"/>

				<Switch
					android:id="@+id/sw_bool_led"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:textOff="关灯"
					android:textOn="开灯"
					android:layout_marginRight="10dp"/>
					
		</RelativeLayout>	
	
		
		<!-- lock(布尔可写) -->
		 <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="1dp"
				android:background="@color/white"
				android:padding="10dp" >

			 <ImageView
				 android:id="@+id/lightTwo"
				 android:layout_marginLeft="10dp"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:background="@drawable/lightoff"
				 />

			 <TextView
				 android:layout_width="wrap_content"
				 android:layout_height="match_parent"
				 android:layout_centerVertical="true"
				 android:text="灯2"
				 android:layout_toRightOf="@id/lightTwo"
				 android:layout_marginLeft="45dp"
				 android:textSize="20sp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

				<Switch
					android:id="@+id/sw_bool_lock"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:textOff="关灯"
					android:textOn="开灯"
					android:layout_marginRight="10dp"/>
					
		</RelativeLayout>

    </LinearLayout>

</ScrollView>